dos_scale           0.01 #scale dos range by
dos_sigma           0.07 #gauss b coefficeinet(default=0.07)

#Parameters (9.Molecular dynamics)
md_type             1 #choose ensemble
md_nstep            10 #md steps
md_ensolver         FP #choose potential
md_dt               1 #time step
